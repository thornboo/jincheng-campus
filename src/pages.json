{
  "page-说明（必填）": "设置页面路径及窗口表现, pages数组中第一项表示应用启动页",
  "pages": [
    {
      "path": "pages/welcome/welcome",
      "style": {
        "navigationBarTitleText": "金橙校园",
        "navigationStyle": "custom"
      }
    },
    {
      "path": "pages/home/home",
      "style": {
        "navigationBarTitleText": "首页"
      }
    },
    {
      "path": "pages/campusWall/campusWall",
      "style": {
        "navigationBarTitleText": "校园墙"
      }
    },
    {
      "path": "pages/chat/chat",
      "style": {
        "navigationBarTitleText": "消息"
      }
    },
    {
      "path": "pages/mine/mine",
      "style": {
        "navigationBarTitleText": "我的"
      }
    }
  ],

  "condition-说明": "启动模式配置，仅开发期间生效，用于模拟直达页面的场景",
  "condition": {
    "current": 0,
    "list": [
      {
        "name": "金橙校园",
        "path": "pages/welcome/welcome"
      }
    ]
  },

  "globalStyle说明": "设置默认页面的窗口表现，用于设置应用的状态栏、导航条、标题、窗口背景色",
  "globalStyle": {
    "navigationBarTextStyle": "black",
    "navigationBarTitleText": "uni-app",
    "navigationBarBackgroundColor": "#F8F8F8",
    "backgroundColor": "#F8F8F8",
    "enablePullDownRefresh": true,
    "usingComponents": {
      "van-button": "/wxcomponents/vant/button/index",
      "van-grid": "/wxcomponents/vant/grid/index",
      "van-grid-item": "/wxcomponents/vant/grid-item/index",
      "van-icon": "/wxcomponents/vant/icon/index",
      "van-row": "/wxcomponents/vant/row/index",
      "van-col": "/wxcomponents/vant/col/index",
      "van-notice-bar": "/wxcomponents/vant/notice-bar/index",
      "van-divider": "/wxcomponents/vant/divider/index"
    }
  },

  "easycom说明": "组件自动引入规则，只要组件安装在项目的components目录下，就可以直接在页面中使用，打包后会自动剔除没有使用的组件",
  "easycom": {
    "autoscan": true,
    "custom": {
      "^uni-(.*)": "@/components/uni-$1.vue"
    }
  },

  "tabBar说明": "设置底部 tab 的表现，配置项指定一级导航栏",
  "tabBar": {
    "color": "#7A7E83",
    "selectedColor": "#3cc51f",
    "borderStyle": "black",
    "backgroundColor": "#ffffff",
    "list": [
      {
        "pagePath": "pages/home/home",
        "text": "首页"
      },
      {
        "pagePath": "pages/campusWall/campusWall",
        "text": "校园墙"
      },
      {
        "pagePath": "pages/chat/chat",
        "text": "消息"
      },
      {
        "pagePath": "pages/mine/mine",
        "text": "我的"
      }
    ]
  },

  "uniIdRouter说明": "自动跳转相关配置，对页面访问权限路由进行控制",
  "uniIdRouter": {
    "loginPage": "pages/login/login",
    "needLogin": ["pages/detail/.*"],
    "resToLogin": true
  }
}

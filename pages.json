		}
	}, {
		"path": "pages/resource_sharing/index",
		"style": {
			"navigationBarTitleText": "资源分享"
		}
	}, {
		"path": "pages/campus_activity/index",
		"style": {
			"navigationBarTitleText": "校园活动"
		}
	}, {
		"path": "pages/campus_canteen/index",
		"style": {
			"navigationBarTitleText": "校园食堂"
		}
	}, {
		"path": "pages/campus_supermarket/index",
